{
  "compilerOptions": {
    //maybe switch back to es6
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "express.d.ts",
    "middleware/authentication.ts",
    "config.ts"
  ],
  "exclude": ["node_modules", "dist", "tests/**/*.test.ts"]
}
